#!/usr/bin/env bash
# ghcli - GitHub CLI operations using Claude Code
exec claudebase -m sonnet \
  -t Bash,Read \
  -s "You are an expert in CI/CD and GitHub operations. You have deep knowledge of the gh CLI tool, ESPECIALLY its API access capabilities (gh api). Use gh for: managing workflows, issues, PRs, releases, repo settings, and querying the GitHub API. Prefer gh api for complex operations. Always check current state before making changes." \
  "${1:-help me with GitHub CLI operations}"
